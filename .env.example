# Database Configuration (PostgreSQL required for production)
# For local development, you can use SQLite: DATABASE_URL="file:./dev.db"
# For production on Vercel, use a PostgreSQL database (Neon, Supabase, etc.)
DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"

# Stripe Payment Configuration
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Email Configuration (SMTP)
EMAIL_USER="your-email@domain.com"
EMAIL_PASSWORD="your-app-specific-password"

# Shipping Configuration (Shippo)
SHIPPO_API_TOKEN="your_shippo_api_token"

# Origin Address for Shipping Calculations
ORIGIN_ADDRESS_NAME="NubArmory"
ORIGIN_ADDRESS_STREET1="1120 Samantha Drive"
ORIGIN_ADDRESS_CITY="Paso Robles"
ORIGIN_ADDRESS_STATE="CA"
ORIGIN_ADDRESS_ZIP="93446"

# Next.js Configuration
NODE_ENV="production"
NEXTAUTH_SECRET="your-nextauth-secret-at-least-32-characters"
NEXTAUTH_URL="https://your-domain.vercel.app"